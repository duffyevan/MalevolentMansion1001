     menu:
         "Examine the book":
             jump read_medical
         "Back away from the shelf":
#have a way to jump straight to the options
             jump to_Library
             
label cooking_bookcase:
     $ menu_flag = True
     "You see a book titled '42 Comfort Foods'."
     menu:
